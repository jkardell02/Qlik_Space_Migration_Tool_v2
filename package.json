{
  "name": "qlik-migration-tool",
  "version": "1.0.0",
  "description": "Qlik Cloud Space Migration Tool",
  "main": "src/app.js",
  "bin": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "build": "pkg . --out-path dist",
    "build:win": "pkg . --target node18-win-x64 --out-path dist",
    "build:mac": "pkg . --target node18-macos-x64 --out-path dist",
    "build:mac-arm": "pkg . --target node18-macos-arm64 --out-path dist",
    "build:all": "pkg . --target node18-win-x64,node18-macos-x64,node18-macos-arm64 --out-path dist"
  },
  "pkg": {
    "assets": [
      "src/public/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64",
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "open": "^8.4.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
